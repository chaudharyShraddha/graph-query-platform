# Django Configuration
# Generate a secure secret key for production: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# PostgreSQL Configuration
# If using Docker Compose, these match the docker-compose.yml settings
# If using manual setup, adjust PORT to 5432 (default PostgreSQL port)
POSTGRES_HOST=localhost
POSTGRES_PORT=5433
POSTGRES_DB=graph_platform_db
POSTGRES_USER=graphuser
POSTGRES_PASSWORD=graphpass123

# Neo4j Configuration
# Default Neo4j credentials (change password on first login)
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=neo4jpass123

# Frontend URL (for CORS)
# Update this to match your frontend URL
FRONTEND_URL=http://localhost:5173

# Redis Configuration (Optional - only needed for production WebSocket support)
# Uncomment and configure if using Redis for channel layers in production
# REDIS_HOST=localhost
# REDIS_PORT=6379

# Logging
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
DJANGO_LOG_LEVEL=INFO

